{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "args": "none",
      "varsIgnorePattern": "^_"
    }]
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
